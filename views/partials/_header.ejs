<header>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Raleway:wght@300&display=swap');
  </style>
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <a class="navbar-brand" style="font-family: 'Raleway', sans-serif;
        font-size: 24px;
        line-height: 0px;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;" href="/">
      <%= appName %>
    </a>
    <div class="navbar-nav mr-auto"">
      <span class="nav-item nav-link active d-md-none position-relative font-weight-light" style="left: 0.5rem;">Welcome, <b>
          <%= locals.user ? user.username : 'stranger' %>
        </b>!</span>
      <button class="navbar-toggler position-fixed" style="top: 0.5rem; right: 1rem;" type="button"
        data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup"
        aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-item nav-link" href="/urls/all">All URLs</a>
        </li>
        <li class="nav-item">
          <a class="nav-item nav-link" href="/urls">My URLs</a>
        </li>
        <li class="nav-item">
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        </li>
      </ul>
      <div class="navbar-nav d-inline-block justify-content-around" style="min-width: 16rem;">
        <span class="nav-item nav-link active d-none d-md-inline-block font-weight-light">Welcome, <b>
            <%= locals.user ? user.username : 'stranger' %>
          </b>! <span class="d-none d-lg-inline-block text-muted"><small><i><%= locals.user ? '(signed in with ' + user.email + ')': '' %></i></small></span></span>
        <% if (typeof user !=='undefined' ) {%>
          <form class="form-inline d-inline-block" action="/logout" method="POST">
            <div class="input-group">
              <button type="submit" class="btn btn-outline-secondary btn-sm"><svg xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 16 16" fill="currentColor" width="16" height="16" style="margin-bottom:2px;">
                  <path fill-rule="evenodd"
                    d="M2 2.75C2 1.784 2.784 1 3.75 1h2.5a.75.75 0 010 1.5h-2.5a.25.25 0 00-.25.25v10.5c0 .138.112.25.25.25h2.5a.75.75 0 010 1.5h-2.5A1.75 1.75 0 012 13.25V2.75zm10.44 4.5H6.75a.75.75 0 000 1.5h5.69l-1.97 1.97a.75.75 0 101.06 1.06l3.25-3.25a.75.75 0 000-1.06l-3.25-3.25a.75.75 0 10-1.06 1.06l1.97 1.97z">
                  </path>
                </svg>&ensp;Logout</button>
            </div>
          </form>
          <% } else { %>
            <div class="navbar-nav d-inline justify-content-around" style="min-width: 12rem;">
              <a href="/login" class="btn btn-success btn-sm"><svg xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 16 16" fill="currentColor" width="16" height="16" style="margin-bottom:2px;">
                  <path fill-rule="evenodd"
                    d="M2 2.75C2 1.784 2.784 1 3.75 1h2.5a.75.75 0 010 1.5h-2.5a.25.25 0 00-.25.25v10.5c0 .138.112.25.25.25h2.5a.75.75 0 010 1.5h-2.5A1.75 1.75 0 012 13.25V2.75zm6.56 4.5l1.97-1.97a.75.75 0 10-1.06-1.06L6.22 7.47a.75.75 0 000 1.06l3.25 3.25a.75.75 0 101.06-1.06L8.56 8.75h5.69a.75.75 0 000-1.5H8.56z">
                  </path>
                </svg>&ensp;Login</a>
              <a href="/register" class="btn btn-primary btn-sm"><svg xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 16 16" fill="currentColor" width="16" height="16" style="margin-bottom:2px;">
                  <path fill-rule="evenodd"
                    d="M13.25 0a.75.75 0 01.75.75V2h1.25a.75.75 0 010 1.5H14v1.25a.75.75 0 01-1.5 0V3.5h-1.25a.75.75 0 010-1.5h1.25V.75a.75.75 0 01.75-.75zM5.5 4a2 2 0 100 4 2 2 0 000-4zm2.4 4.548a3.5 3.5 0 10-4.799 0 5.527 5.527 0 00-3.1 4.66.75.75 0 101.498.085A4.01 4.01 0 015.5 9.5a4.01 4.01 0 014.001 3.793.75.75 0 101.498-.086 5.527 5.527 0 00-3.1-4.659z">
                  </path>
                </svg>&ensp;Register</a>
            </div>
            <% } %>
      </div>
    </div>
    </div>
  </nav>
</header>