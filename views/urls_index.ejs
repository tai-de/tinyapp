<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
    integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous" />

  <!-- Google Icons -->
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20,300,0,0" />

  <title>TinyApp</title>
</head>

<body>

  <%- include('partials/_header.ejs') %>

    <main style="margin: 1em;">
      <div class="card" style="width: 100%;">
        <div class="card-header">
          <h4>My URLs</h4>
        </div>
        <div class="card-body form-group">

          <table class="table table-striped table-hover">
            <thead class="thead-light">
              <tr>
                <th scope="col" class="">Short URL ID</th>
                <th scope="col" class="">Long URL</th>
                <th scope="col" class="">Stats</th>
                <th scope="col" class="d-none d-lg-block">Options</th>
              </tr>
            </thead>
            <tbody>
              <% for (let id in urls) { %>
                <tr>
                  <th scope="row" class="">
                    <a href="/urls/<%= id %>">
                      <%= id %>
                    </a>
                    <% if(Date().toString().substring(0,10)===urls[id].created.toString().substring(0,10) &&
                      Date().toString().substring(0,10)!==urls[id].updated.toString().substring(0,10)) { %>
                      &nbsp;<span class="badge badge-success" data-toggle="tooltip" data-placement="top"
                        title="created today">new</span>
                      <% } %>
                        <% if(Date().toString().substring(0,10)===urls[id].updated.toString().substring(0,10) &&
                          Date().toString().substring(0,10) !==urls[id].created.toString().substring(0,10)) { %>
                          &nbsp;<span class="badge badge-success" data-toggle="tooltip" data-placement="top"
                            title="updated today">updated</span>
                          <% } %>
                            <% if(Date().toString().substring(0,10)===urls[id].updated.toString().substring(0,10) &&
                              Date().toString().substring(0,10)===urls[id].created.toString().substring(0,10)) { %>
                              &nbsp;<span class="badge badge-success" data-toggle="tooltip" data-placement="top"
                                title="created and updated today">new/updated</span>
                              <% } %>
                  </th>
                  <td class="">
                    <%= urls[id].longUrl %>
                  </td>
                  <td class="">
                    <div>

                      <% if (urls[id].created) { %>
                        <button type="button" class="badge badge-primary d-none d-md-inline" disabled>
                          <small>Created</small> <span class="badge badge-light">
                            <%= urls[id].created.toString().substring(0,10) %>
                          </span>
                        </button>
                        <% } else { %>
                          <button type="button" class="badge badge-primary d-none d-md-inline" disabled>
                            <small>Created</small> <span class="badge badge-light">
                              Unknown
                            </span>
                          </button>
                          <% } %>
                          
                            <button type="button" class="badge badge-success d-inline" disabled>
                              <small>Total hits</small> <span class="badge badge-light">
                                <%= urls[id].hits %>
                              </span>
                            </button>
                            <button type="button" class="badge badge-success d-inline" disabled>
                              <small>Unique hits</small> <span class="badge badge-light">
                                <%= urls[id].uniqueHits.length %>
                              </span>
                            </button>
                    </div>
                  </td>
                  <td class="d-none d-lg-block">
                    <div class="btn-group" role="group">
                      <button type="button" class="btn btn-outline-primary btn-sm"
                        onclick="copyText(`http://localhost:8080/u/<%= id %>`)"><span class="material-symbols-outlined"
                          style="vertical-align: bottom">link</span> Copy</button>
                    </div>
                    <div class="btn-group" role="group">
                      <a class="btn btn-outline-success btn-sm" href="/urls/<%= id %>/edit" role="button"><span
                          class="material-symbols-outlined" style="vertical-align: bottom">edit_square</span> Edit</a>
                    </div>
                    <div class="btn-group" role="group">
                      <form method="POST" action="./urls/<%= id %>/delete">
                        <button type="submit" class="btn btn-outline-danger btn-sm"><span
                            class="material-symbols-outlined" style="vertical-align: bottom">delete</span>
                          Delete</button>
                      </form>
                    </div>
                    <script>
                      function copyText(input) {
                        navigator.clipboard.writeText
                          (input);
                      }
                    </script>
                  </td>
                </tr>
                <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </main>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
      integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
      crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous"></script>
    <script>$(function() {
        $('[data-toggle="tooltip"]').tooltip();
      })</script>

</body>

</html>